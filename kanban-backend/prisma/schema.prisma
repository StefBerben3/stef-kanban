generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model card {
  id              String   @id @default(uuid())
  lane            lane     @relation(fields: [laneId], references: [id])
  laneId          String
  taskName        String
  taskDescription String
  taskPriority    Int
  taskAssignee    String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model lane {
  id        String   @id @default(uuid())
  lane      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  card      card[]
}
